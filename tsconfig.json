{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "jsx": "preserve",
        "noEmit": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@composables/*": [
                "src/composables/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client",
            "jest",
            "@types/requestidlecallback"
        ],
        "plugins": [],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}
